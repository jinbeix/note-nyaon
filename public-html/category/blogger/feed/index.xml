<div><span style="color: maroon;">&lt;script&gt;</span></div>
<div><span style="color: #001080;">document</span>.<span style="color: #795e26;">addEventListener</span>(<span style="color: #a31515;">&#8216;DOMContentLoaded&#8217;</span>,() <span style="color: blue;">=&gt;</span> {</div>
<div>&nbsp; <span style="color: blue;">const</span> <span style="color: #0070c1;">title</span> = <span style="color: #001080;">document</span>.<span style="color: #795e26;">querySelectorAll</span>(<span style="color: #a31515;">&#8216;.openCloseButton&#8217;</span>);</div>
<div>&nbsp; </div>
<div>&nbsp; <span style="color: #af00db;">for</span> (<span style="color: blue;">let</span> <span style="color: #001080;">i</span> = <span style="color: #098658;">0</span>; <span style="color: #001080;">i</span> &lt; <span style="color: #0070c1;">title</span>.<span style="color: #001080;">length</span>; <span style="color: #001080;">i</span>++){</div>
<div>&nbsp; &nbsp; <span style="color: blue;">let</span> <span style="color: #001080;">titleEach</span> = <span style="color: #0070c1;">title</span>[<span style="color: #001080;">i</span>];</div>
<div>&nbsp; &nbsp; <span style="color: blue;">let</span> <span style="color: #001080;">content</span> = <span style="color: #001080;">titleEach</span>.<span style="color: #001080;">nextElementSibling</span>;</div>
<div>&nbsp; &nbsp; <span style="color: #001080;">titleEach</span>.<span style="color: #795e26;">addEventListener</span>(<span style="color: #a31515;">&#8216;click&#8217;</span>, () <span style="color: blue;">=&gt;</span> {</div>
<div>&nbsp; &nbsp; &nbsp; <span style="color: #001080;">titleEach</span>.<span style="color: #001080;">classList</span>.<span style="color: #795e26;">toggle</span>(<span style="color: #a31515;">&#8216;is-active&#8217;</span>);</div>
<div>&nbsp; &nbsp; &nbsp; <span style="color: #001080;">content</span>.<span style="color: #001080;">classList</span>.<span style="color: #795e26;">toggle</span>(<span style="color: #a31515;">&#8216;is-open&#8217;</span>);</div>
<div>&nbsp; &nbsp; });</div>
<div>&nbsp; }</div>
<div>});</div>
<div><span style="color: maroon;">&lt;/script&gt;</span></div>
</div>
</div>
</div>
]]></content:encoded>
					
		
		
